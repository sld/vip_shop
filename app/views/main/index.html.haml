%h1 Online shop for VIPs

.row
  .span3
    = link_to "Sign out", destroy_user_session_path, :method => :delete
  .span5    
    %span
      #balance= render :partial => 'shared/user_balance'
      = link_to "Add to balance 1000", balances_increase_path, :remote => true
  .span4
    %b Cart

%br

%table{:class => 'table table-bordered'}
  %thead
    %tr
      %th Name
      %th Price
      %th Cart
  %tbody    
    - @products.each do |product|
      %tr
        %td= product.name
        %td= product.price
        %td= current_user.cart.products.include?(product) ? "In cart" : link_to( "Add to cart", '#' )

